<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    tools:context=".ContactDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/profileIv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/baseline_account_circle_24"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:contentDescription="profile_image" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSecondary"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            tools:text="Profile Name" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:text="Phone"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary" />
                <TextView
                    android:id="@+id/ProfilePhone"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:textColor="@color/colorTextSecondary"
                    tools:text="0177000800" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Email"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary" />
                <TextView
                    android:id="@+id/ProfileEmail"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:textColor="@color/colorTextSecondary"
                    tools:text="sample@gmail.com" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Added Time"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary" />
                <TextView
                    android:id="@+id/ProfileaddedTime"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:textColor="@color/colorTextSecondary"
                    tools:text="2023-08-01 10:30" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Updated Time"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary" />
                <TextView
                    android:id="@+id/updatedTimeTv"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:textColor="@color/colorTextSecondary"
                    tools:text="2023-08-02 14:45" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</RelativeLayout>
